<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">


    <ImageView
        android:id="@+id/img_captured_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/pic_captured"
        android:padding="20sp" />

    <!-- ScrollView - author (g3) -->
    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scrollbars="vertical"
        android:fillViewport="true">-->
        <!-- TextView - author (g2) -->
        <!--
        <TextView
            android:id="@+id/ocr_text_view"
            android:text="@string/take_photo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal|center"/>
        -->
    <!--</ScrollView>-->

    <!-- ingredients list (Francesco Pham) -->
    <ListView
        android:id="@+id/ingredients_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/img_captured_view">
    </ListView>

    <TextView
        android:id="@+id/empty_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:text="@string/empty_list_ingredients"
        app:layout_constraintTop_toBottomOf="@+id/img_captured_view">
    </TextView>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:max="100"
        android:progress="1"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/empty_list"
        app:layout_constraintStart_toStartOf="@+id/empty_list"
        app:layout_constraintTop_toBottomOf="@+id/img_captured_view">
    </ProgressBar>

    <!-- Camera activity launcher button (Francesco Pham) -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/newPictureFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_photo_camera_24px"
        android:layout_margin="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:backgroundTint="@color/colorPrimary"/>

</android.support.constraint.ConstraintLayout>