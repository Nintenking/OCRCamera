<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/ingredient_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/inci_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inci_name_title"
            android:layout_alignParentStart="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5sp" />
        <TextView
            android:id="@+id/inci_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inci_name_title"
            android:layout_alignParentStart="true"
            android:textSize="15sp"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"/>

        <TextView
            android:id="@+id/found_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/found_text_title"
            android:layout_below="@id/inci_name_view"
            android:layout_alignParentStart="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5sp"/>
        <TextView
            android:id="@+id/found_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/found_text_title"
            android:layout_alignParentStart="true"
            android:textSize="15sp"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"/>

        <TextView
            android:id="@+id/description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_title"
            android:layout_below="@id/found_text_view"
            android:layout_alignParentStart="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5sp"/>
        <TextView
            android:id="@+id/description_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_title"
            android:layout_alignParentStart="true"
            android:textSize="15sp"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"/>
    </RelativeLayout>

</LinearLayout>
